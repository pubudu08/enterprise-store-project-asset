<script>
    var isSocial = ('{{isSocial}}' == 'true');
</script>
<div class="asset-description">
    {{#with asset}}
        {{#attributes}}


            <div class="assetp-properties">

                <ul class="nav nav-tabs" id="assetp-tabs" data-aid="{{../path}}">
                    <li class="active">
                        <a href="#tab-properties" data-toggle="tab" data-type="basic">{{t "Description"}}</a>
                    </li>
                    <li>
                        <a href="#tab-reviews" data-toggle="tab" data-type="comments">{{t "User Reviews"}}</a>
                    </li>
                </ul>

                <div class="tab-content">
                    <div class="tab-pane active" id="tab-properties">
                        <div class="content">
                           <div ><iframe style="height:508px;width:870px;" src="http://10.100.5.44:9763/gadgets/ifr?url=http://10.100.5.44:9763/portal/gadgets/test-status/test-status.xml&onRemote=true&productId=3&productVersionId=33"></iframe><div>
                        </div>
                    </div>
                    <div class="tab-pane" id="tab-reviews">
                        <iframe name="socialIfr" id="socialIfr"
                                src="../../../social/?target={{../../type}}:{{../id}}&user={{../../user.username}}"
                                width="100%" height="100%" style="height: 300px;"></iframe>
                       	{{#if ../../inDashboard}}
                       		 <div id="comment-content" class="content"></div>
						{{else}}
							<div id="comment-content" class="content user-review"></div>
						{{/if}}
                    </div>

                </div>

            </div>
        {{/attributes}}
    {{/with}}
</div>
